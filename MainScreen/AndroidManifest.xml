<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.DC2.UMLBusApp" android:versionCode="1" android:versionName="1.5">
	<uses-sdk />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.VIBRATE"></uses-permission>

	<application android:label="@string/app_name"
		android:debuggable="true" android:icon="@drawable/icon">
		<uses-library android:name="com.google.android.maps" />

		<activity android:name=".MainScreen" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity android:name=".UI.About"></activity>
		<activity android:name=".UI.DisplayUMLMap"></activity>
		<activity android:name=".UI.BusSchedule"></activity>
		<activity android:name=".UI.SettingsMenu"></activity>
		
	</application>
</manifest>

 